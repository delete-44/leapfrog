<%= form_with(model: node, class: "flex flex-col py-2 px-3 w-full rounded border border-gray-200") do |form| %>
  <%= render partial: 'shared/flash' %>
  <%= form.label :description %>
  <%= form.text_area :description, value: node.description %>
  <%= form.submit value: "Update", class: "mt-4 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>

<%= render node.connections %>
