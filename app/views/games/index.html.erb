<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block py-2 px-3 mb-5 font-medium text-green-500 bg-green-50 rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold text-purple-500">Games</h1>
    <%= link_to "New game", new_game_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="games" class="min-w-full">
    <%= render @games %>
  </div>

  <p data-controller="hello" data-action="click->hello#handleClick"></p>
</div>
