<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block py-2 px-3 mb-5 font-medium text-green-500 bg-green-50 rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold text-purple-500">Games</h1>


    <%= form_with(model: Game.new, class: "contents") do |form| %>
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <% end %>
  </div>

  <div id="games" class="min-w-full">
    <%= render @games %>
  </div>

  <p data-controller="hello" data-action="click->hello#handleClick"></p>
</div>
