<div class="flex gap-2 mx-auto w-full md:w-2/3">
  <h1 class="sr-only">Editing game</h1>

  <section class="w-2/3 h-full bg-white">
    <% @game.nodes.each do |node| %>
      <button class="py-1 px-3.5 bg-purple-100 rounded-full"><%= node.id %></button>
    <% end %>
  </section>

  <section class="flex flex-wrap gap-y-1 gap-x-2 w-1/3">
    <%= form_with(model: Node.new, class: "contents") do |form| %>
      <%= form.hidden_field :game_id, value: @game.id %>
      <%= form.submit class: "w-full rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <% end %>

    <div class="flex flex-col my-16 w-full">
      <%= form_with(model: Node.first, class: "contents") do |form| %>
        <%= form.label :description %>
        <%= form.text_area :description, value: Node.first.description %>
        <%= form.submit class: "mt-4 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <% end %>
    </div>

    <%= link_to "Play this game", @game, class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <%= link_to "Back to games", games_path, class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
  </section>
</div>
